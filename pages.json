{
	"easycom": {
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
		},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationBarBackgroundColor":"#417dda"
			}
		},
		{
		    "path" : "pages/login/login",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "登录",
		        "enablePullDownRefresh": false
		    }
		    
		}
        ,{
            "path" : "pages/news/news",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "资讯",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/orders/orders",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "订单",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/mine/mine",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"tabBar":{
		"list":[
			{
				"pagePath":"pages/index/index",
				"text":"首页",
				"iconPath":"static/icons/首页灰色.png",
				"selectedIconPath":"static/icons/首页彩色.png"
			},
			{
				"pagePath":"pages/news/news",
				"text":"资讯",
				"iconPath":"static/icons/资讯灰色.png",
				"selectedIconPath":"static/icons/资讯彩色.png"
			},
			{
				"pagePath":"pages/orders/orders",
				"text":"订单",
				"iconPath":"static/icons/订单灰色.png",
				"selectedIconPath":"static/icons/订单彩色.png"
			},
			{
				"pagePath":"pages/mine/mine",
				"text":"我的",
				"iconPath":"static/icons/我的灰色.png",
				"selectedIconPath":"static/icons/我的彩色.png"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "壹手回收",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
